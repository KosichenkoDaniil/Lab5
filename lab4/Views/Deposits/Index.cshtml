@model lab4.ViewModels.DepositViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="badge rounded-pill bg-secondary">Create New</a>
</p>
<form action="@Url.Action("Index","Deposits")" method="post">
    Наименование вклада:@Html.TextBox("Name", Model.Name)
    Минимальный срок вклада:@Html.TextBox("Term", Model.Term, new {type="number", step="any"})
    Минимальная сумма вклада:  <input asp-for="@Model.Mindepositamount" name="Mindepositamount" type="number" step="any"></input>
    Процентная ставка: <input asp-for="@Model.Rate" name="Rate" type="number" step="any"></input>
    Дополнительные условия:@Html.TextBox("Additionalconditions", Model.Additionalconditions)
    Наименование валюты:@Html.TextBox("CurrencyName", Model.CurrencyName)
        
    <input type="submit" value="Найти"></input>
</form>
<table class="table">
    <thead>
        <tr class="table-dark">
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Term)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mindepositamount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Additionalconditions)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CurrencyName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.deposits) {
        <tr class="table-secondary">
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Term)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mindepositamount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Additionalconditions)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Currency.Name    )
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="badge bg-primary">Edit</a> 
                    <a asp-action="Details" asp-route-id="@item.Id" class="badge bg-primary">Details</a> 
                    <a asp-action="Delete" asp-route-id="@item.Id" class="badge bg-primary">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<page-link page-model="@Model.PageViewModel" page-action="Index"></page-link>
